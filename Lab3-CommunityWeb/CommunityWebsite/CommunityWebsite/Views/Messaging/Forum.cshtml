@model Message
@{List<Message> messageBoard = Messaging.GetMessageList("general");}
@{
    ViewData["Title"] = "Community Posts Redirect";
}

<h2>List of Messages:</h2>
@foreach (Message message in messageBoard)
{
    <div class="overflow-auto">
        <div class="userMessage text-light darkParagraphBackground p-4">
            <h1 class="secondaryPageHeaderCustom">@message.MessageTitle</h1>
            <p class="pageParagraph">
                @message.MessageContent
            </p>
            <div class="d-flex flex-row">
                <p class="digitalSignature p-2">Post by @message.UserNameSignature on @message.GetTimePosted</p>
            </div>
            
        </div>
    </div>
     }
<a asp-controller="Home" asp-action="Home">Go home</a><br />
<a asp-controller="Home" asp-action="Contact">Go back</a>

