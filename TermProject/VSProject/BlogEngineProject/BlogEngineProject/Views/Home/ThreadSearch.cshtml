@{
    ViewData["Title"] = "Search Threads";
}
<section>
    <h1 class="mb-2 universalPageTitleStyle">Search for Threads</h1>
    <form class="d-flex" method="get" asp-controller="Home" asp-action="ThreadSearchResults" >
        <fieldset>
            <div class="form-group">
                <input name="searchParameter" placeholder="Title" class="form-control" type="text">
            </div>
            <button type="submit" class="btn btn-dark text-light">SUBMIT</button>
        </fieldset>
    </form>
    


</section>
