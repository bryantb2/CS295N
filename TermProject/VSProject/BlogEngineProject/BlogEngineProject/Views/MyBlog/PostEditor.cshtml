
@{
    ViewData["Title"] = "Post Editor";
}
@model Post
<section>
    <h1 class="universalPageTitleStyle mt-5 replyTitleCustomSpacing">Post Editor</h1>
    <row class="row mb-5">
        <div class="col-12">
            <div class="overflow-auto mb-5">
                <div class="text-light darkParagraphBackground p-4">
                    <h1 class="postTitle">@Model.Title</h1>
                    <p class="pageParagraph">@Model.Content</p>
                    <div class="d-flex flex-row">
                        <p class="digitalSignature">Posted on @Model.TimeStamp</p>
                    </div>
                </div>
            </div>
        </div>
    </row>
    <row class="row mb-2">
        <div class="col-12">
            <article class="text-dark p-4 customBorder mb-2">
                <form class="inputFieldText well form-horizontal" asp-route-userId=@ViewBag.UserId asp-route-threadId=@ViewBag.ThreadId asp-route-postId=@Model.PostID asp-controller="MyBlog" asp-action="EditPost" method="post" id="editPost_form">
                    <fieldset>
                        <legend class="formHeaderText mb-1">Change Post Content</legend>

                        <div class="form-group">
                            <label for="editedTitle" class=" control-label text-dark">Post Title</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <input name="editedTitle" placeholder="Title" class="form-control" type="text">
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="editedContent" class=" control-label text-dark">Post Content</label>
                            <div class="inputGroupContainer">
                                <div class="input-group">
                                    <textarea name="editedContent" placeholder="Post Text Content" class="form-control customMessageArea" type="text"></textarea>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-dark text-light customReplyButtonStyle">Save Changes</button>
                    </fieldset>
                </form>
            </article>
        </div>
    </row>
    <a asp-controller="MyBlog" asp-action="PostDashboard" class="navigationButton btn btn-light btn-small active" role="button" aria-pressed="true">Go Back</a>
</section>


