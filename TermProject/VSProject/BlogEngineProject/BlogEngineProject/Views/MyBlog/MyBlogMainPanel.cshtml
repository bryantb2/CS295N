
@{
    ViewData["Title"] = "My Blog Dashboard";
}
@model User
@{ Thread thread = Model.OwnedThread;}
<section>
    <h1 class="universalPageTitleStyle mt-5 mb-5">Thread Dashboard</h1>
    <div class="row mb-5">

        <div class="col-3 p-4">
            <div class="d-flex flex-column">
                <div class="mb-3 ">
                    <a asp-controller="" asp-action="" class="btn btn-secondary text-light optionButtonCustom" role="button" aria-pressed="true">Edit Profile</a>
                </div>
                <div class="mb-3 ">
                    <a asp-controller="" asp-action="" class="btn btn-secondary text-light optionButtonCustom" role="button" aria-pressed="true">Modify Posts</a>
                </div>
                <div class="mb-3 ">
                    <a asp-controller="" asp-action="" class="btn btn-secondary text-light optionButtonCustom" role="button" aria-pressed="true">Change Thread Styling</a>
                </div>
            </div>
        </div>

        <div class="col-9 p-4 ">
            <div class="customBorder p-4">
                <div class="profileDetails profileDetailsText mb-5">
                    <div class="d-flex mb-4">
                        <img class="maxSize profileImageStyle img-thumbnail" src="https://theofficeanalytics.files.wordpress.com/2017/11/dwight.jpeg?w=1200" alt="" />
                        <div class="pl-4">
                            <h1 id="userName" class="pb-2 text-dark profileTitle">
                                <a class="profileTitle">@thread.Name</a>
                            </h1>
                            <div class="text-dark">
                                @Model.Username
                                <span class="pr-2">&nbsp;</span>
                                @thread.Category
                            </div>
                        </div>
                    </div>
                    <div class="text-dark">
                        <b class="bioTitle">Bio</b>
                        <p>
                            @thread.Bio
                        </p>
                    </div>
                </div>

                <div>
                    <h3 class="mb-2 postSectionTitle">Current Posts</h3>

                    @{
                        foreach (Post p in thread.Posts)
                        {
                            <div class="overflow-auto mb-5">
                                <div class="text-light darkParagraphBackground p-4">
                                    <h1 class="postTitle">@p.Title</h1>
                                    <p class="pageParagraph"> @p.Content</p>
                                    <div class="d-flex flex-row">
                                        <p class="digitalSignature">Posted on @p.TimeStamp</p>
                                    </div>
                                </div>
                                <a class="btn btn-link text-dark" href="#">Reply</a>
                            </div>
                        }
                    }

                </div>
            </div>
        </div>

    </div>
</section>


