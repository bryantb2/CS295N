@{
    ViewData["Title"] = "Contact";
}
<section class="homePageContainer">
    <div class="container p-0">
        <div class="row">
            <div class="col-6">
                <article class="contextBoxRestricted text-light">
                    <!--Form design borrowed from https://codepen.io/juff03/pen/OXaXRG -->
                    <div class="container contactFormContainer p-0">
                        <form class="well form-horizontal" action=" " method="post" id="contact_form">
                            <fieldset>

                                <!-- Form Name -->
                                <legend><span class="p-2 pageHeaderCustom">Contact Us!</span></legend><br>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label class="col-md-5 control-label text-light">First Name</label>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input name="first_name" placeholder="First Name" class=" form-control" type="text">
                                        </div>
                                    </div>
                                </div>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label class="col-md-5 control-label text-light">Last Name</label>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input name="last_name" placeholder="Last Name" class="form-control" type="text">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-md-5 control-label text-light">Department / Office</label>
                                    <div class="col-md-5 selectContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>
                                            <select name="department" class="form-control selectpicker text-dark">
                                                <option value="">Select your Department/Office</option>
                                                <option>Department of Engineering</option>
                                                <option>Department of Agriculture</option>
                                                <option>Accounting Office</option>
                                                <option>Tresurer's Office</option>
                                                <option>MPDC</option>
                                                <option>MCTC</option>
                                                <option>MCR</option>
                                                <option>Mayor's Office</option>
                                                <option>Tourism Office</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label class="col-md-5 control-label text-light">Username</label>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input name="user_name" placeholder="Username" class="form-control" type="text">
                                        </div>
                                    </div>
                                </div>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label class="col-md-5 control-label text-light">Password</label>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input name="user_password" placeholder="Password" class="form-control" type="password">
                                        </div>
                                    </div>
                                </div>

                                <!-- Text input-->

                                <div class="form-group">
                                    <label class="col-md-5 control-label text-light">Confirm Password</label>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input name="confirm_password" placeholder="Confirm Password" class="form-control text-light" type="password">
                                        </div>
                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-5 control-label text-light">E-Mail</label>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                                            <input name="email" placeholder="E-Mail Address" class="form-control" type="text">
                                        </div>
                                    </div>
                                </div>


                                <!-- Text input-->

                                <div class="form-group">
                                    <label class="col-md-5 control-label text-light">Contact No.</label>
                                    <div class="col-md-5 inputGroupContainer">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
                                            <input name="contact_no" placeholder="(639)" class="form-control" type="text">
                                        </div>
                                    </div>
                                </div>

                                <!-- Select Basic -->
                                <!-- Success message -->
                                <div class="alert alert-success halfWidthLimiter" role="alert" id="success_message">Success <i class="glyphicon glyphicon-thumbs-up"></i> Success!.</div>

                                <!-- Button -->
                                <div class="form-group">
                                    <label class="col-md-5 control-label"></label>
                                    <div class="col-md-5">
                                        <br>
                                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<button type="submit" class="btn btn-warning">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspSUBMIT <span class="glyphicon glyphicon-send"></span>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</button>
                                    </div>
                                </div>

                            </fieldset>
                        </form>
                    </div><!-- /.container -->
                </article>
            </div>
            <div class="col-6">
                <article class="messageContentBoxRestricted">
                    <div class="d-flex justify-content-left">
                        <div class="pageSelectorContainer">
                            <p class="d-flex pt-4 text-light">
                                Please select a genre to view posts from other users!
                            </p>
                        </div>
                        <div class="dropdown p-4">
                            <button class="dropdownMenuButton btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Explore Forum Posts
                            </button>
                            <div class="dropdown-menu p-4" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-action="">Genre 1</a>
                                <a class="dropdown-item" asp-action="">Genre 2</a>
                                <a class="dropdown-item" asp-action="">Genre 3</a>
                            </div>
                        </div>
                    </div>
                    <div class="overflow-auto">
                        <div class="userMessage text-light darkParagraphBackground p-4">
                            <h1 class="secondaryPageHeaderCustom">[User specified title]</h1>
                            <p class="pageParagraph">
                                This is an example message, pretty cool eh?
                            </p>
                            <p class="digitalSignature">[username]</p>
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
    
    
</section>
